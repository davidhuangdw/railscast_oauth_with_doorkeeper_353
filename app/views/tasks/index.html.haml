.page-header
  = link_to new_task_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Task
  %h1 Listing tasks

= simple_form_for Task.new do |f|
  = f.input :name
  = f.submit 'Add'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th User
        %th Name
        %th
        %th
        %th

    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.user_name
          %td= task.name
          %td= link_to 'Show', task
          %td= link_to 'Edit', edit_task_path(task)
          %td= link_to 'Destroy', task, :data => { confirm: 'Are you sure?' }, :method => :delete
